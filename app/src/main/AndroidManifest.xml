<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.store20">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Store20"
        tools:targetApi="31">

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Store20"> <!-- Or a specific theme for Login -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegistrationActivity"
            android:exported="false"
            android:theme="@style/Theme.Store20"> <!-- Or a specific theme for Registration -->
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="false">
            <!-- Removed launcher intent filter -->
        </activity>

        <activity
            android:name=".CartActivity"
            android:exported="false"
            android:label="@string/title_activity_cart" />
            <!-- android:parentActivityName=".MainActivity" -->
            <!-- Could add parent activity for Up navigation if not handled by finish() -->

        <activity
            android:name=".CheckoutActivity"
            android:exported="false"
            android:label="@string/title_activity_checkout" />
            <!-- android:parentActivityName=".CartActivity" -->

        <activity
            android:name=".OrderHistoryActivity"
            android:exported="false"
            android:label="@string/title_activity_order_history" />
            <!-- android:parentActivityName=".MainActivity" -->

    </application>

</manifest>
